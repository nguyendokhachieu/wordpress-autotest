<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="TC_Login">
    <listeners>
        <listener class-name="actions.commons.MethodListener" />
        <listener class-name="actions.reportConfig.AllureTestListener" />
    </listeners>
    <test name="Run on Chrome" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testcases.com.wordpress.admin.TC_Login">
                <methods>
                    <include name="TC_Login_005_LoginSuccess" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Run on Firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.com.wordpress.admin.TC_Login">
                <methods>
                    <include name="TC_Login_005_LoginSuccess" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Run on Edge" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testcases.com.wordpress.admin.TC_Login">
                <methods>
                    <include name="TC_Login_005_LoginSuccess" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
